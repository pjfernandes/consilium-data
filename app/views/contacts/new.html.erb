<div class="text-center pr-5 pl-5">
  <h2 class="container pb-3"><i class="fas fa-envelope-open text-danger"></i> Contact</h2>
    <div class="border border-danger rounded pt-2 pb-2">
    <div class="pr-5 pl-5 pt-2 pb-3">
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.input :name, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :message, :as => :text, :required => true %>
        <div>
          <%= f.button :submit, 'Send', :class=> "btn btn-danger mt-2" %>
        </div>
      <% end %>
    </div>
</div>
