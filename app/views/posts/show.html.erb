<div class="post mt-5 mr-4 ml-4 mb-4 text-center bg-light text-dark border border-danger rounded">
  <h2 class="mt-4 text-break text-center p-2 mr-2 ml-2"><i class="fas fa-chart-line text-danger"></i> <%=@post.title.capitalize%></h2>
  <p class="text-center ml-3 text-muted font-italic text-break"><i class="fas fa-calendar"></i> <%=@post.created_at.strftime("%m/%d/%Y")%></p>
   <% if @post.photo.attached? %>
    <div class="figure">
      <%= cl_image_tag @post.photo.key, class: "img-fluid mx-auto d-block rounded w-50" %>
      <p class="text-center text-break"><%=@post.legend%></p>
    </div>
   <%end%>

  <div class="post-content mt-2 ml-4 mr-4 pr-3 pl-3">
    <div class="post-content-item text-break text-left rounded mx-auto d-block"><%=@post.content%></div>
  </div>
</div>
<div class="text-center">
  <%= link_to "Back", posts_path, class:"btn btn-danger text-center" %>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to "Edit", edit_post_path(@post), class:"btn btn-danger text-center ml-2" %>
    <%= link_to "Delete",
            post_path(@post),
            method: :delete,
            data: { confirm: "Are you sure?" }, class:"btn btn-danger text-center ml-2" %>
  <%end%>
</div>
