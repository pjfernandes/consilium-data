<h2 class="text-center"><i class="fas fa-inbox text-danger"></i> Messages</h2>

<div class="mt-3">
  <% @messages.each do |message| %>
    <div class="card-product text-dark mt-2">
      <img src="https://media.istockphoto.com/photos/cyberspace-with-digital-lines-binary-hanging-chain-picture-id583960308?b=1&k=20&m=583960308&s=170667a&w=0&h=RezvK4R2kechrJrk5XfXndDXUVmqmhlDB87P04aqS_U=" />
      <div class="card-product-infos">
        <h2><%=message.name%> - <%=message.email%></h2>
        <p><i class="fas fa-calendar text-danger"></i> <%=message.created_at.strftime("%m/%d/%Y")%></p>
        <p><%=message.message%></p>
      </div>
    </div>
  <% end %>
</div>
